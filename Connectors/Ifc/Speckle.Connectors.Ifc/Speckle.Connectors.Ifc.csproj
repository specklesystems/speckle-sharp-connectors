<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

 <PropertyGroup Label="Nuget Package Properties">
    <IsPackable>true</IsPackable>
    <IncludeSymbols>true</IncludeSymbols>
    <version>0.0.6</version>
  </PropertyGroup>


  <PropertyGroup Label="Ignored Compile Warniongs">
  <NoWarn>
    IDE1006;IDE0130;IDE0011;CA1051;CA1720;CA1002;CA1054;CA1062;CA1028;CA1721;CA1502;CA1065;
    $(NoWarn)
  </NoWarn>
</PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Ara3D.Buffers"  />
    <PackageReference Include="Ara3D.Logging"  />
    <PackageReference Include="Ara3D.Utils" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="Speckle.Objects" />
    <PackageReference Include="Speckle.Sdk" />
    <PackageReference Include="Speckle.WebIfc" />
    <PackageReference Include="System.CommandLine" />
  </ItemGroup>
</Project>
